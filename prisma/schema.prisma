generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String  @id @default(cuid())
  name String?

  email    String @unique
  password String
}

enum CONTENT_TYPE {
  HTML
  MD
}

model Article {
  id          String       @id @default(cuid())
  name        String
  description String
  content     String
  type        CONTENT_TYPE @default(MD)

  image   Image?  @relation(fields: [imageId], references: [id])
  imageId String?
}

model Image {
  id       String    @id @default(cuid())
  name     String
  filePath String
  url      String
  Article  Article[]
}
generator zod {
  provider              = "zod-prisma"
  output                = "./zod"
  relationModel         = true
  modelCase             = "camelCase"
  modelSuffix           = "Schema"
  useDecimalJs          = true
  prismaJsonNullability = true
}